<div class="row" style="margin-top:25%">
  <div class="large-12 columns">
    <% @categories.order('name ASC').each do |category|%>
      <div class="large-4 small-4 columns" style="text-align: center; margin-bottom: 25px">
        <%= link_to image_tag(category.url, class:'category', style:'position:relative; width: 100px; border-radius: 10px; border: 2px solid; padding: 5px; box-shadow: 2px 2px 3px rgb(172, 172, 172); background: white'), category_path(category), class:"animated rotateIn", style:"width:100%;" %>
        <div style="margin: 10px 0">
        <%= link_to category.name, category_path(category), class:'', style:'width: 140px; border-radius: 60px; font-size: 0.9em'  %> </h3>
      </div>
      </div>
    <%end%>
  </div>

