<div class="row">
  <div class="large-12 columns">
    <div class="hide-for-small">
      <div id="featured">
        <!--img src="http://placehold.it/1000x400&text=Slide Image" alt="slide image"-->
        <%= image_tag @activity.img_url, style: "width:1000px;height:400px" %>
      </div>
    </div>
    <div class="row">
      <div class="small-12 show-for-small"><br>
        <!--img src="http://placehold.it/1000x600&text=For Small Screens"/-->
        <%= image_tag @activity.img_url, style: "padding:28px; margin-top:10px;width:1000px;height:300px" %>
      </div>
    </div>
  </div>
</div><br>

<div class="row">
  <div class="large-12 columns">
    <div class="row">
      <div class="large-8 columns">
        <div class="panel radius">
          <div class="row">
            <div class="large-9 small-6 columns">
              <h4><%= @activity.name %></h4><hr/>
              <p style="text-align: justify;"><%= @activity.description.truncate(200) %></p>
              <a id="read-more" href="#">Leer mas</a>
              <p style="text-align: justify;display:none;"><%= @activity.description %></p>
              <a id="read-less" style="display:none" href="#">Leer menos</a>
              <div class="show-for-small" align="center">
                <a href="#" class="small radius button">Website</a><br>
                <a href="#" class="small radius button">Take me there</a>
                <%= link_to "<- Back", category_path(@activity.category_id ), class: "small radius button" %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="large-4 columns hide-for-small">
        <h4>More info!</h4><hr/>
        <a class="large button expand" href="#">
          Website
        </a>
        <a class="large button expand" href="#">
          Take me there
        </a>
        <%= link_to "<- Back", category_path(@activity.category_id ), class: "large button expand" %>
      </div>
    </div>
  </div>
</div>
<script>
  $("#read-more").on("click", function(e){
    e.preventDefault();
    $(this).hide();
    $(this).prev().hide();
    $(this).next().slideDown(500);
    $(this).next().next().show();
  });
  $("#read-less").on("click", function(e){
    e.preventDefault();
    $(this).hide();
    $(this).prev().slideUp(500);
    setTimeout(function(){
      $("#read-less").prev().prev().show();
      $("#read-less").prev().prev().prev().slideDown(500);
    },500);
  });
</script>
